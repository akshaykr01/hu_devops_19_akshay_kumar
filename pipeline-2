pipeline {
    agent any
    
    environment {
        dockerImage =''
        registry = 'akshaykr07/pythonapp'
        registryCredentials = 'docker_id'
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '**']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/akshaykr01/ci-cd/']]])
            }
        }
        stage('Build Docker image') {
            steps {
                script {
                    dockerImage = docker.build registry
                }
            }
        }
        stage('Uploading Imafe') {
            steps {
                scripts {
                    docker.withRegistry( '', registryCredentials ) {
                        dockerImage.push()
                    }
                    }
                }
            }
        }
    }
}
